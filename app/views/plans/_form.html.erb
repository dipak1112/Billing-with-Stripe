<%= form_for @plan do |f| %>
  <% if @plan.errors.any? %>
    <div class="error_messages">
      <h2>Form is invalid</h2>
      <ul>
        <% for message in @plan.errors.full_messages %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <% if @plan.new_record? %>
    <div class="field">
      <%= f.label :price %>
      <%= f.text_field :price %>
    </div>
    <div class="field">
      <%= f.label :plan_code %>
      <%= f.text_field :plan_code %>
    </div>
  <% end %>
  <div class="actions">
    <%= f.submit %> | <%= link_to "Cancel", plans_path %>
  </div>

<% end %>
