<h1>Plan List</h1>
<% if @plans.present? %>
<%= link_to "Add Plan", new_plan_path %><br><br>
	<table border="1">
		<thead>
			<th>Name </th>
			<th>Price</th>
			<th>Plan Code</th>
			<th>Actions</th>
		</thead>
		<tbody>
			<% @plans.each do |plan| %>
				<tr>
					<td><%= plan.name %></td>
					<td><%= plan.price %></td>
					<td><%= plan.plan_code %></td>
					<td>
						<%= link_to "Show", plan %>|
						<%= link_to "Edit", edit_plan_path(plan) %>|
						<%= link_to "Delete", plan, :method => :delete, :confirm => "Are you sure? " %>
					</td>
				</tr>
			<% end %>
		</tbody>
	</table>
<% else %>
	<p>No Plan Present. | <%= link_to "Add Plan", new_plan_path %></p>
<% end %>